#include<iostream>
using namespace std;

class complex{
    private:
    int a,b;

    public:
    complex()=default;
    complex(int x,int y)
    {
        a=x;
        b=y;
    }

   void showdata()
   {
       cout<<a<<"i"<<b<<endl;
   }
    complex operator+(complex &obj)
    {
        complex ob;
        ob.a=a+obj.a;
        ob.b=b+obj.b;
        return ob;
    }

    
};
int main()
{
   complex c1(3,8),c2(9,13),c3;
   c3=c1+c2;
   c3.showdata();
    
    
    }
